/* components/setting/setting.wxss */

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal .modalPopup {
  display: flex;
  flex-direction: column;
  width: 646rpx;
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
}

.modalPopup .closeBtn {
  position: absolute;
  width: 27rpx;
  height: 27rpx;
  right: 38rpx;
  top: 38rpx;
  z-index: 20;
}

.modalPopup .banner {
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  height: 150rpx;
}

.modalPopup .title {
  padding: 40rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  position: relative;
  z-index: 10;
  color: #222222;
}

.modalPopup .content {
  margin-bottom: 50rpx;
}

.modalPopup .saveButton {
  width: 218rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #00CF88 0%, #3DFB9A 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 28rpx;
  left: 50%;
  position: relative;
  margin-left: -109rpx;
  margin-bottom: 40rpx;
}

.modalPopup .columnItem {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.modalPopup .pickerColumn {
  height: 200rpx;
}

.modalPopup .pickerview {
  margin-bottom: 20rpx;
}