/* components/wordDetail/wordDetail.wxss */

.scrollview {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

/* 头部单词信息 */

.word-head {
	display: flex;
	flex-direction: column;
	margin-top: 80rpx;
	margin-bottom: 70rpx;
	justify-content: center;
	align-items: center;
}

.pron-icon {
  width: 28rpx;
	height: 28rpx;
	margin-right: 30rpx;
}

.word-pron {
	display: flex;
	flex-direction: row;
	font-size: 28rpx;
	color: #666666;
	margin-top: 20rpx;
	margin-bottom: 48rpx;
}

.word-trans {
	width: 60%;
	height: 70rpx;
	text-align: center;
	font-size: 28rpx;
	line-height: 38rpx;
	color: #222222;
}

/* 词性和sense line上方的横线条 */

.cu-line {
	overflow: hidden;
	height: 20rpx;
	background-color: #ffffff;
	display: inline-flex;
	align-items: center;
	width: 100%;
}

.cu-line.xs {
	height: 3rpx;
}

.cu-line.sm {
	height: 10rpx;
}

.cu-line view {
	width: 0;
	height: 100%;
	align-items: center;
	display: flex;
	justify-items: flex-end;
	justify-content: space-around;
	color: var(--white);
}

/* 右侧小tag */

.info-tag {
	width: 60rpx;
	height: 32rpx;
	display: inline-flex;
	vertical-align: middle;
	position: relative;
	justify-content: center;
	align-items: center;
	box-sizing: border-box;
	font-family: Helvetica Neue, Helvetica, sans-serif;
	white-space: nowrap;
	font-size: 20rpx;
	border-radius: 4rpx;
}

.wordtype {
	color: #94A4AD;
	background-color: #F5F5F5;
}

.defn {
	color: #00CF88;
	background-color: #E9FFF5;
	/* padding: 0rpx 16rpx; */
}

.phrase {
	color: #FEAF28;
	background-color: #FEC75933;
}

/* 词组板 */

.phrase-board {
	background-color: #F5F5F5;
}

/* -- */

.margin-top-ss {
	margin-top: 5rpx;
}

.margin-right-ss {
	margin-top: 5rpx;
}