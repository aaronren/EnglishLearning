/* pages/practice/spell/spell.wxss */
@import "../../style/colorui/icon.wxss";
@import "../../style/colorui/main.wxss";

.full-screen {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 5px 20px 50px 20px;
  position: absolute;
}

.text-pron {
  font-size: 36px;
  text-align: left;
  min-height: 42px;
  color: #222222;
}

.pron-icon {
  width: 50rpx;
  height: 50rpx;
  font-size: 45rpx;
  margin-right: 30rpx;
}

.frame-pron {
  display: flex;
  height: 38px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-self: stretch;
  margin-bottom: 30px;
}

.text-defn {
  display: inline-block;
  min-height: 50px;
  max-height: 260px;
  align-self: stretch;
  font-size: 14px;
  text-align: center;
  color: #000000;
  margin-left: 15rpx;
  margin-bottom: 60rpx;
}

.text-answer {
  display: inline-block;
  font-size: 16px;
  text-align: center;
  min-height: 19px;
  margin-bottom: 5.5px;
}

.text-answer-0 {
  color: #000000;
}

.text-answer-1 {
  color: #00cf88;
}

.text-answer-2 {
  color: #ff8e57;
}

.view-line {
  display: flex;
  width: 115px;
  height: 1px;
  background-color: #0b0a0a;
}

.frame-answerline {
  display: flex;
  width: 115px;
  height: 25.5px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right: 20px;
}

.del-btn {
  display: flex;
  width: 35px;
  height: 35px;
  background-color: #c4c4c4;
}

.frame-answer {
  display: flex;
  height: 35px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-self: stretch;
  margin-bottom: 30px;
}

.text-option {
  display: inline-block;
  font-size: 22px;
  color: #666666;
}

.frame-white {
  background-color: #ffffff;
}

.frame-grey {
  background-color: #f5f5f5;
}

.frame-option {
  display: flex;
  width: 45px;
  height: 45px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 4px;
  border-width: 2rpx;
  border-color: #e6e6e6;
  border-style: solid;
  margin: 5px 5px 5px 5px;
}

.keyboard-sel {
  display: flex;
  width: 335px;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 10px 10px 10px;
  flex-wrap: wrap;
}