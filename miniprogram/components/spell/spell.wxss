/* pages/practice/spell/spell.wxss */
@import "../../style/colorui/icon.wxss";
@import "../../style/colorui/main.wxss";

.full-screen {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 5px 20px 50px 20px;
  position: absolute;
}

.text-pron {
  height: 35px;
  font-size: 30px;
  color: #616060;
}

.pron-icon {
  width: 50rpx;
  height: 50rpx;
  font-size: 45rpx;
  margin-right: 30rpx;
}

.frame-pron {
  display: flex;
  height: 38px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-self: stretch;
  margin-bottom: 30px;
}

.text-defn {
  display: inline-block;
  min-height: 50px;
  max-height: 260px;
  align-self: stretch;
  font-size: 25px;
  text-align: left;
  color: #000000;
  margin-left: 15rpx;
  margin-bottom: 30rpx;
}

.text-answer {
  display: inline-block;
  font-size: 30px;
  text-align: center;
  min-height: 35px;
  color: #000000;
  margin-left: 50rpx;
  margin-right: 30rpx;
}

.frame-answer {
  display: flex;
  height: 35px;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  align-self: stretch;
  margin-bottom: 30px;
}

.text-option {
  display: inline-block;
  width: 45px;
  height: 45px;
  font-size: 36px;
  text-align: center;
}

.frame-option {
  display: flex;
  width: 45px;
  height: 45px;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #45c3fa;
  border-radius: 3px;
  margin: 5px 5px 5px 5px;
}

.keyboard-sel {
  display: flex;
  width: 335px;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px 10px 10px 10px;
  flex-wrap: wrap;
}