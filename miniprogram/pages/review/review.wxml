<!--miniprogram/pages/review/review.wxml-->

<scroll-view scroll-y class="scrollview" scroll-top="0">
  <checkbox-group bindchange="checkboxChange">
    <view class="cu-list menu sm-border">
      <view class="cu-item" wx:if="{{wordsList.length<5}}">
        <view class="content">
          <text class="text-grey text-xs">您学习后有错的单词就会记录于此，集齐5个开始复习</text>
        </view>
      </view>
      <block wx:if="{{wordsList.length>0}}">
        <view class="cu-item">
          <view class="content">
            <text class="text-grey text-xs">选择想要复习的单词继续练习吧～</text>
          </view>
        </view>
        <view class="cu-item" wx:for="{{wordsList}}" wx:key="index">
          <view class="content">
              <checkbox class="round blue margin-right-lg" value="{{index}}" checked="{{index<5}}"></checkbox>
              <text class="text-{{item.star<=1?'red':'grey'}}">{{item.word}}</text>
          </view>
          <view class="action">
            <text class="cuIcon-favorfill lg star-right text-{{item.star>jj?'yellow':'grey'}}" wx:for="{{3}}" wx:for-item="jj" wx:key="jj"></text>
          </view>
        </view>
      </block>
    </view>
    <!-- 底部 留白 -->
    <view class="bottom-space bg-white"></view>
  </checkbox-group>
</scroll-view>

<view class="bottom-button">
  <view class="cu-bar bg-white tabbar border shop">
    <view class="bg-{{wordsList.length>4?'blue':'grey'}} submit" 
    catchtap="{{wordsList.length>4?'toReviewSelectWords':''}}">开始复习</view>
  </view>
</view>