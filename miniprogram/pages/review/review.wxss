/* miniprogram/pages/review/review.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.scrollview {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}

.tipItem {
  margin: 20rpx 0rpx 20rpx 32rpx;
}

.oneCuItem {
  display: flex;
  flex-direction: column;
  height: 192rpx;
  border-radius: 12rpx;
  margin: 30rpx 30rpx 0rpx 30rpx;
  background-color: #ffffff;
}

.word-line {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 15rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  align-items: center;
  /* background-color: yellow; */
}

.sentence-line {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  /* background-color: goldenrod; */
}

.text-word {
  font-size: 36rpx;
  color: #222222;
  /* background-color: red; */
}

.text-sentence {
  display: inline-block;
  font-size: 28rpx;
  /* height: 38rpx; */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #666666;
  /* background-color: green; */
  margin-top: 16rpx;
}

.bottom-button {
  width: 100%;
  bottom: 0;
  position: fixed;
  background-image: linear-gradient(to right, #00cf88, #3dfb9a);
  font-size: 32rpx;
  color: #ffffff;
}

.button-disable {
  background-image: linear-gradient(to right, #aaaaaa, #cccccc);
}