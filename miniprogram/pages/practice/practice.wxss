/* miniprogram/pages/practice/practice.wxss */

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

.progress {
  background-image: linear-gradient(to right, #00cf88, #3dfb9a);
}

.question-show {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}

.bottom-button {
  width: 100%;
  bottom: 0;
  position: absolute;
}

.select-botton {
  margin: 0rpx 0rpx 40rpx 0rpx;
}

.word-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 15% 0rpx 25rpx;
}

.word-content {
  font-size: 80rpx;
}

.pron-container {
  display: flex;
  flex-direction: row;
}

.pron-icon {
  width: 50rpx;
  height: 50rpx;
  font-size: 45rpx;
}

.word-definition {
  margin: 50rpx 30rpx 20rpx 30rpx;
  font-size: 40rpx;
  color: #585858;
}

.tips-align {
  width: 100%;
  bottom: 80px;
  text-align: center;
  position: absolute;
}