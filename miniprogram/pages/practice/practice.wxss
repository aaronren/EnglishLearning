/* miniprogram/pages/practice/practice.wxss */

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

.progress {
  background-image: linear-gradient(to right, #00cf88, #3dfb9a);
}

.question-show {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.bottom-button {
  width: 100%;
  bottom: 0;
  position: absolute;
}

.select-botton {
  margin: 0rpx 0rpx 40rpx 0rpx;
}

.word-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  margin: 15% 0rpx 25rpx;
}

.word-content {
  font-size: 72rpx;
  font-family: Arial-Black, Arial;
  font-weight: bold;
  color: #222222;
  line-height: 72rpx;
  margin-bottom: 10rpx;
}

.pron-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.pron-icon {
  width: 28rpx;
  height: 28rpx;
}

.pron-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 28rpx;
  margin-left: 5rpx;
}

.eg-sentense {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 28rpx;
  margin-top: 40rpx;
  padding: 0 80rpx;
}

.word-definition {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #222222;
  line-height: 36rpx;
}

.tips-align {
  width: 100%;
  bottom: 80px;
  text-align: center;
  position: absolute;
}

.select-options {
  display: flex;
  flex-direction: column;
  margin-top: 140rpx;
  align-items: center;
  position: relative;
  justify-content: center;
}

.select-options .select-option {
  width: 590rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  position: relative;
  border-radius: 200rpx 40rpx 12rpx 200rpx;
  margin: 20rpx 0;
}

.select-option .text {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 90%;
  text-align: center;
}

.select-option.notyet {
  border: 1rpx solid #E6E6E6;
  background-color: #fff;
  color: #666;
}

.select-option.right {
  background: #E9FFF5;
  color: #00CF88;
  border: 1rpx solid #00CF88;
}

.select-option.wrong {
  background: #FFF4F0;
  border: 1rpx solid #FF8E57;
  color: #F96A32;
}

.select-option .tag {
  width: 32rpx;
  height: 32rpx;
  border-radius: 12rpx 2rpx 12rpx 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  bottom: 0;
}

.select-option .tag.wrong-tag {
  background-color: #FF8E56;
}

.select-option .tag.right-tag {
  background-color: #06CF88;
}

.select-option .tag .icon {
  width: 16rpx;
  height: 16rpx;
}
