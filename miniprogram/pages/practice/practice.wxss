/* miniprogram/pages/practice/practice.wxss */

page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: #ffffff;
}

.progress {
  background-image: linear-gradient(to right, #00cf88, #3dfb9a);
}

.question-show {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
}

.bottom-button {
  width: 100%;
  bottom: 0;
  position: fixed;
  background-image: linear-gradient(to right, #00cf88, #3dfb9a);
  font-size: 32rpx;
  color: #ffffff;
}

.select-botton {
  margin: 0rpx 0rpx 40rpx 0rpx;
}

.word-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 150rpx 60rpx 25rpx 60rpx;
}

.word-content {
  font-size: 72rpx;
  font-family: Arial-Black, Arial;
  font-weight: bold;
  color: #222222;
  line-height: 72rpx;
  margin-bottom: 15rpx;
}

.pron-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.pron-icon {
  width: 28rpx;
  height: 28rpx;
}

.pron-text {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 36rpx;
  margin-left: 5rpx;
}

.eg-sentense {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #666666;
  line-height: 28rpx;
  margin-top: 40rpx;
  padding: 0 80rpx;
}

.word-definition {
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #222222;
  line-height: 42rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.word-definition .definition:not(:last-child) {
  margin-bottom: 20rpx;
}

.tips-align {
  width: 100%;
  bottom: 80px;
  text-align: center;
  position: absolute;
}

.select-options {
  display: flex;
  flex-direction: column;
  margin-top: 140rpx;
  align-items: center;
  position: relative;
  justify-content: center;
}

.select-options .select-option {
  width: 590rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  position: relative;
  border-radius: 200rpx 200rpx 12rpx 200rpx;
  margin: 20rpx 0;
}

.select-option .text {
  display: inline-block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 90%;
  text-align: center;
}

.select-option.notyet {
  border: 1rpx solid #E6E6E6;
  background-color: #fff;
  color: #666;
}

.select-option.right {
  background: #E9FFF5;
  color: #00CF88;
  border: 1rpx solid #00CF88;
}

.select-option.wrong {
  background: #FFF4F0;
  border: 1rpx solid #FF8E57;
  color: #F96A32;
}

.select-option .tag {
  width: 32rpx;
  height: 32rpx;
  border-radius: 12rpx 2rpx 2rpx 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  right: 0;
  bottom: 0;
}

.select-option .tag.wrong-tag {
  background-color: #FF8E56;
}

.select-option .tag.right-tag {
  background-color: #06CF88;
}

.select-option .tag .icon {
  width: 16rpx;
  height: 16rpx;
}

.topBgImg {
  width: 100%;
  height: 568rpx;
  position: absolute;
  top: 0;
}

.finishContent {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.finishContent .goodjobIcon {
  width: 194rpx;
  height: 166rpx;
  margin-top: 44rpx;
  margin-bottom: 39rpx;
}

.finishContent .goodJobText {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 44rpx;
  margin-bottom: 52rpx;
}

.finishContent .studyCard {
  width: 714rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 5rpx 5rpx 5rpx #A6A6A6;
}

.studyCard .finishAvatar {
  width: 108rpx;
  height: 108rpx;
  border-radius: 54rpx;
  margin-top: 64rpx;
  margin-bottom: 12rpx;
}

.studyCard .finishNickname {
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: bold;
  color: #222222;
  line-height: 50rpx;
  margin-bottom: 70rpx;
}

.studyCard .finishInfo {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 70rpx;
  width: 90%;
}

.finishInfo .infoItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.finishInfo .infoItem .value {
  font-size: 60rpx;
  font-family: DINMittelschriftLTW1G;
  font-weight: bold;
  color: #222222;
  line-height: 52rpx;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.finishInfo .infoItem .title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A6A6A6;
  line-height: 28rpx;
}

.controlBtn {
  width: 394rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #00CF88 0%, #3DFB9A 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 32rpx;
  margin-bottom: 40rpx;
}

.controlBtn.orange {
  background: linear-gradient(90deg, #FEC95C 0%, #FEAE26 100%);
}