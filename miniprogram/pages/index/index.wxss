/* miniprogram/pages/index/index.wxss */

page {
  height: 100%;
}

.topBanner {
  z-index: 10;
  position: relative;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 60rpx 30rpx;
}

.topBanner .userInfo {
  align-items: center;
  justify-content: center;
}

/* ------------------- */

.avatar-flex {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  background-size: cover;
}

.userinfo-avatar[size] {
  width: 100rpx;
  height: 100rpx;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo .userName {
  margin-left: 20rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Semibold, PingFang SC;
  font-weight: 600;
  color: #FFFFFF;
  line-height: 50rpx;
}

/* ------------------- */

.search {
  width: 76rpx;
  height: 60rpx;
  background: rgba(239, 239, 239, 0.3);
  align-items: center;
  justify-content: center;
  border-radius: 36px;
}

.searchIcon {
  width: 32rpx;
  height: 32rpx;
}

.topBgImg {
  width: 100%;
  position: absolute;
  height: 368rpx;
  top: 0;
}

.studyCard {
  width: 714rpx;
  height: 500rpx;
  position: relative;
  left: 50%;
  margin-left: -357rpx;
  border-radius: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
}

.studyCard .listTag {
  position: absolute;
  top: 0;
  left: 0;
  width: 192rpx;
  height: 48rpx;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.listTag .listTagIcon {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.listTag .text {
  position: relative;
  z-index: 10;
}

.studyCard .leftWords {
  position: absolute;
  left: 30rpx;
  top: 76rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 28rpx;
}

.studyCard .studyPlan {
  width: 172rpx;
  height: 56rpx;
  border-radius: 40rpx;
  border: 1rpx solid #00C67B;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #00C67B;
  position: absolute;
  top: 38rpx;
  right: 50rpx;
}

.studyStatus {
  padding: 180rpx 70rpx 0;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.studyStatus .statusItem {
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.statusItem .value {
  font-size: 60rpx;
  font-family: DINMittelschriftLTW1G;
  font-weight: bold;
  color: #222222;
  line-height: 52rpx;
  letter-spacing: 4rpx;
  margin-bottom: 20rpx;
}

.statusItem .title {
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #222222;
  line-height: 28rpx;
}

.beginStudy {
  width: 394rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #00CF88 0%, #3DFB9A 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  left: 50%;
  margin-left: -197rpx;
}

.actions {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 30rpx;
}

.actions .actionItem {
  width: 336rpx;
  height: 152rpx;
  border: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.actionItem.battle {
  background-color: #FEF5F7;
}

.actionItem.review {
  background-color: #E6FFF4;
}

.actionItem.setting {
  background-color: #ECFEFF;
}

.actionItem.record {
  background-color: #FFFDEB;
}

.actionItem .iconWrapper {
  width: 130rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.actionItem .actionIcon {
  width: 54rpx;
  height: 54rpx;
}

.actionItem .actionInfo {
  display: flex;
  flex: 1;
  justify-content: center;
  flex-direction: column;
}

.actionInfo .title {
  font-size: 32rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #222222;
  line-height: 32rpx;
  margin-bottom: 16rpx;
}

.actionInfo .subtitle {
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #A6A6A6;
  line-height: 24rpx;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal .mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
}

.modal .modalPopup {
  display: flex;
  flex-direction: column;
  width: 646rpx;
  position: relative;
  background-color: #fff;
  border-radius: 20rpx;
}

.modalPopup .closeBtn {
  position: absolute;
  width: 27rpx;
  height: 27rpx;
  right: 38rpx;
  top: 38rpx;
  z-index: 20;
}

.modalPopup .banner {
  position: absolute;
  top: 0;
  width: 100%;
  left: 0;
  height: 150rpx;
}

.modalPopup .title {
  padding: 40rpx;
  font-size: 36rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  position: relative;
  z-index: 10;
  color: #222222;
}

.modalPopup .content {
  margin-bottom: 50rpx;
}

.modalPopup .saveButton {
  width: 218rpx;
  height: 64rpx;
  background: linear-gradient(90deg, #00CF88 0%, #3DFB9A 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 28rpx;
  left: 50%;
  position: relative;
  margin-left: -109rpx;
  margin-bottom: 40rpx;
}

.modalPopup .columnItem {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.modalPopup .pickerColumn {
  height: 200rpx;
}

.modalPopup .pickerview {
  margin-bottom: 20rpx;
}